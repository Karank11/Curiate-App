<!-- This is the layout for a single article card in the RecyclerView -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/card_margin_horizontal"
    android:layout_marginVertical="@dimen/card_margin_vertical"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Article Image -->
        <ImageView
            android:id="@+id/article_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_image_height"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@mipmap/curate_ic_launcher"
            android:contentDescription="@string/article_image"/>

        <!-- Source Name -->
        <TextView
            android:id="@+id/source_name_text"
            style="@style/Curiate.TextAppearance.Meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_padding_vertical"
            android:layout_marginStart="@dimen/content_padding_horizontal"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/article_image"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Insights" />

        <!-- Time Ago -->
        <TextView
            android:id="@+id/time_ago_text"
            style="@style/Curiate.TextAppearance.Meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/content_padding_horizontal"
            app:layout_constraintTop_toTopOf="@id/source_name_text"
            app:layout_constraintBottom_toBottomOf="@id/source_name_text"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="4h ago" />

        <!-- Article Title -->
        <TextView
            android:id="@+id/article_title_text"
            style="@style/Curiate.TextAppearance.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginHorizontal="@dimen/content_padding_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/source_name_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="The Future of Urban Living: How Tech is Reshaping Our Cities" />

        <!-- Article Summary -->
        <TextView
            android:id="@+id/article_summary_text"
            style="@style/Curiate.TextAppearance.Summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginHorizontal="@dimen/content_padding_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/article_title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="A deep dive into the smart technologies and innovative designs that are defining the next generation of metropolitan life." />

        <!-- Divider Line -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_color"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginHorizontal="@dimen/content_padding_horizontal"
            app:layout_constraintTop_toBottomOf="@id/article_summary_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Topic Tags -->
        <TextView
            android:id="@+id/author_text"
            style="@style/Curiate.TextAppearance.Meta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Author: Karan Karhale"
            android:textStyle="italic"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginHorizontal="@dimen/content_padding_horizontal"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bookmark_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/spacing_small"/>

        <!-- Bookmark Button -->
        <ImageButton
            android:id="@+id/bookmark_button"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_bookmark"
            app:tint="@color/icon_tint"
            app:layout_constraintEnd_toStartOf="@id/share_button"
            app:layout_constraintTop_toTopOf="@id/author_text"
            app:layout_constraintBottom_toBottomOf="@id/author_text" />

        <!-- Share Button -->
        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:layout_marginEnd="@dimen/icon_button_margin_end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_share"
            app:tint="@color/icon_tint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/author_text"
            app:layout_constraintBottom_toBottomOf="@id/author_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
