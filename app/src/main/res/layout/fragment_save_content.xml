<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_background"
    android:paddingBottom="@dimen/spacing_medium"
    tools:context=".ui.SaveContentFragment">

    <View
        android:id="@+id/drag_handle"
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@drawable/bottom_sheet_drag_handle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/save_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:text="@string/save_to_curiate"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/drag_handle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="@dimen/icon_button_size"
        android:layout_height="@dimen/icon_button_size"
        android:src="@drawable/ic_close"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/icon_tint"
        app:layout_constraintTop_toTopOf="@id/save_title_text"
        app:layout_constraintBottom_toBottomOf="@id/save_title_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/spacing_small"
        android:contentDescription="@string/close"/>

    <View
        android:id="@+id/divider_top"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/spacing_medium"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/save_title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/divider_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fetching_text"/>

    <TextView
        android:id="@+id/fetching_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fetching_preview"
        android:textSize="18sp"
        android:layout_marginVertical="36dp"
        app:layout_constraintTop_toBottomOf="@id/progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/content_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/content_padding_horizontal"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/divider_top"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@mipmap/curate_ic_launcher" />

    <TextView
        android:id="@+id/content_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Curiate.TextAppearance.Title"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/content_padding_horizontal"
        app:layout_constraintTop_toTopOf="@id/content_image"
        app:layout_constraintStart_toEndOf="@id/content_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Article Title or Video Title Goes Here and Can Wrap to Two Lines" />

    <TextView
        android:id="@+id/content_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Curiate.TextAppearance.Meta"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@id/content_title"
        app:layout_constraintStart_toStartOf="@id/content_title"
        app:layout_constraintEnd_toEndOf="@id/content_title"
        tools:text="www.example-long-url-that-gets-truncated.com" />

    <TextView
        android:id="@+id/tags_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_tags_optional"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/content_image"
        app:layout_constraintStart_toStartOf="@id/content_image" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/add_tags_chip_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@id/tags_label"
        app:layout_constraintStart_toStartOf="@id/tags_label"
        app:layout_constraintEnd_toEndOf="@id/content_title">
        <com.google.android.material.chip.Chip
            android:id="@+id/add_tag_chip"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipIcon="@drawable/ic_add"
            android:text="@string/add_tag"/>
    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/save_post"
        android:layout_marginTop="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/add_tags_chip_group"
        app:layout_constraintStart_toStartOf="@id/tags_label"
        app:layout_constraintEnd_toEndOf="@id/content_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/loading_group"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:constraint_referenced_ids="progress_bar,fetching_text"
        tools:visibility="visible"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/content_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="content_image,content_title,content_url,tags_label,add_tags_chip_group,save_button"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>